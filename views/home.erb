<div class = "container">
		<h2>Hangman</h2>
		<!-- 			<p><%= @game.word %></p> -->
		<p><%= @game.results %></p>

		<p><% if !@game.last_guess_good  %>
			<%= "Try again, there is no #{@last_guess}" %>

			<% end %>
		</p>

		<p>You have <%= @game.guesses_remaining %> guesses left
		</p>
		<p><% if @game.saved_game %>
			<%= "You have a saved game available" %>
			<% end %>
		</p>
	</div>



	<div class="controls">
		<div class="panel red">
			<ul>
				<li>
					<form method="post" action="/" autocomplete="off">
						<input type="text" name="last_guess" placeholder="Guess a letter">
						<input type="submit" value="Guess!">
					</form>
				</li>
				<li>
					<form method="post" action="/save">
						<button type="submit" name="save_game_button">Save Game</button>
					</form>
				</li>
				<li>
					<form method="post" action="/load">
						<button type="submit" name="load_game_button">Load Game</button>
					</form>
				</li>

			</ul>
		</div>
	</div>